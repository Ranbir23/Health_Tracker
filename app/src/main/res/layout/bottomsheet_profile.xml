<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardUpdate"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/colorPrimaryDark"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingBottom="10dp"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/bottomSheetBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_menu"
            android:rotation="180"
            android:drawableTint="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>






        <TextView
            android:id="@+id/profileUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/oval_background"
            android:backgroundTint="@color/lighgray"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"
            android:drawableStart="@drawable/ic_pulse"
            />


        <TextView
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/lighgray"
            android:text="@string/profile"
            android:layout_toRightOf="@id/profileUpdate"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            />


        <TextView
            android:id="@+id/profileDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile"
            android:textColor="@color/white"
            android:layout_alignStart="@+id/profile"/>





        <LinearLayout
            android:id="@+id/profileLinear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/profileDescription">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/heightProfileLabel"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="Height"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@drawable/backgound_text"
                    android:padding="1dp"
                   />


                <EditText
                    android:id="@+id/profileHeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/heightProfileLabel"
                    android:layout_alignBaseline="@+id/heightProfileLabel"
                    android:layout_marginStart="5dp"
                    android:inputType="number"
                    android:backgroundTint="@color/white"
                    android:textColorHint="@color/gray"
                    android:textColor="@color/white"

                    android:hint="Centimeter"/>



            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/WeightProfileLabel"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="Weight"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@drawable/backgound_text"
                    android:padding="1dp"
                    />


                <EditText
                    android:id="@+id/profileWeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/WeightProfileLabel"
                    android:layout_alignBaseline="@+id/WeightProfileLabel"
                    android:layout_marginStart="5dp"
                    android:backgroundTint="@color/white"
                    android:textColorHint="@color/gray"
                    android:inputType="number"
                    android:textColor="@color/white"

                    android:hint="Kilogram"/>



            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/AgeProfileLabel"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="Age"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@drawable/backgound_text"
                    android:padding="1dp"
                    />


                <EditText
                    android:id="@+id/profileAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/AgeProfileLabel"
                    android:layout_alignBaseline="@+id/AgeProfileLabel"
                    android:layout_marginStart="5dp"
                    android:backgroundTint="@color/white"
                    android:textColorHint="@color/gray"
                    android:inputType="number"
                    android:textColor="@color/white"

                    android:hint="Years"/>



            </RelativeLayout>



        </LinearLayout>





        <Button
            android:id="@+id/updateProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UPDATE"
            android:textColor="@color/white"
            android:backgroundTint="@color/colorFLoatingButton"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/profileLinear"
            />


    </RelativeLayout>


</android.support.v7.widget.CardView>