<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



    <style name="DarkMode" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu">


        <item name="android:textColor">#F7F3F3</item>

        <item name="android:gravity">center_horizontal</item>

        <item name="android:popupAnimationStyle">@anim/scaling_anime</item>

        <item name="android:background">@drawable/logout</item>

        <item name="android:backgroundTint">#DA4B4949</item>

        <item name="android:textAlignment">center</item>

        <item name="android:popupMenuStyle">@drawable/logout</item>

        <item name="android:popupBackground">@drawable/logout</item>

        <item name="android:textSize">15sp</item>

    </style>


    <style name="MenuLabelsStyle">
        <item name="android:background">@drawable/label_menu</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">middle</item>
    </style>

    <style name="DefaultNumberPickerTheme" parent="AppTheme">
        <item name="colorControlNormal">@color/dark_gray</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textSize">18sp</item>
        <item name="android:editable">false</item>


    </style>

    <style name="DefaultNumberPickerTheme2" parent="AppTheme">
        <item name="colorControlNormal">@color/white</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:editable">false</item>



    </style>

</resources>
